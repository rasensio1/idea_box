<h1> New Idea </h1>

<%= form_for @idea, url: user_ideas_path(current_user) do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />

  <%= f.label :body %><br />
  <%= f.text_field :body %><br />
  <%= collection_select(:idea, :category_id, Category.all,:id, :name) %>

  <%= f.submit "Submit" %>
<% end %>
